<tr id="plan-<%= plan.id %>">
  <td> <%= plan.open? ? link_to(content_tag(:i, '', class: 'icon-ok-sign'), {action: 'close', id: plan.id}, method: 'put') : content_tag(:i, '', class: 'icon-ok') %></td>
  <td>
    <h3><%= link_to plan.title, plan_path(plan) %></h3>
    <% plan.labels.each do |label| %>
      <%= content_tag :span, label.name, class: 'label' %>
    <% end %>
  </td>
  <td class="muted"><%= plan.created_at.strftime('%e %b.') %></td>
  <td> <%= link_to content_tag(:i, '', class: 'icon-remove-sign'), {action: 'destroy', id: plan.id}, data: {confirm: 'Pull the trigger?'}, method: 'delete', remote: true  %> </td>
</tr>
